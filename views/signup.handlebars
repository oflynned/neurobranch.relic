<div class="container">
    <!-- title -->
    <div class="page-header text-center">
        <h3>Investigator Sign Up</h3>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 center-form">
            <div class="account-wall center-form">
                <img class="form-image" src="/img/neurobranch_logo.png"
                     alt="">
                <form class="form-signin" method="post" action="/send">
                    <!-- fields -->
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Forename" name="forename" id="forename"
                               required
                               autofocus>
                        <input type="text" class="form-control" placeholder="Surname" name="surname" id="surname"
                               required>
                        <input type="text" class="form-control" placeholder="Username" name="username" id="username"
                               required>
                        <select class="form-control" name="institute" id="institute" name="institute">
                            <option value="Trinity College Dublin" selected >Trinity College Dublin</option>
                        </select>
                    </div>

                    <input type="email" class="form-control" placeholder="Email" name="email" id="to" required>
                    <input type="email" class="form-control" placeholder="Confirm email" name="conf_email" id="email"
                           required>
                    <input type="password" class="form-control" placeholder="Password" name="password" id="password"
                           required>
                    <input type="password" class="form-control" placeholder="Confirm password" name="conf_pass"
                           required>

                    <button id="send_email" class="btn btn-lg btn-primary btn-block">Sign up</button>
                    <span id="message"></span>
                    <label class="pull-left checkbox checkbox-left-align">
                        <input type="checkbox" value="remember-me" required>
                        I agree to the <a href="#">terms of use</a>, <a href="#">privacy policy</a>, & <a href="#">cookie
                        policies</a>.
                    </label>
                    <div class="center-text">
                        Already have an account? <a href="/users/login" class="need-help">Log in.</a><span
                            class="clearfix"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

